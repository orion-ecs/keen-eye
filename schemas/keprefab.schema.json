{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://keeneyes.dev/schemas/keprefab.schema.json",
  "title": "KeenEyes Prefab",
  "description": "Schema for KeenEyes prefab files (.keprefab)",
  "type": "object",
  "required": ["name"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to the JSON schema for IDE validation"
    },
    "name": {
      "type": "string",
      "description": "Prefab name used for generated method naming (e.g., SpawnPlayer)",
      "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
    },
    "version": {
      "type": "integer",
      "description": "Format version number",
      "default": 1,
      "minimum": 1
    },
    "base": {
      "type": ["string", "null"],
      "description": "Base prefab name for inheritance (null if no base)"
    },
    "root": {
      "$ref": "#/$defs/prefabEntity",
      "description": "Root entity definition"
    },
    "children": {
      "type": "array",
      "description": "Top-level child entities of the prefab",
      "items": {
        "$ref": "#/$defs/prefabEntity"
      }
    },
    "overridableFields": {
      "type": "array",
      "description": "List of field paths that can be overridden when spawning (e.g., 'Transform.Position')",
      "items": {
        "type": "string",
        "pattern": "^[A-Za-z_][A-Za-z0-9_]*(\\.[A-Za-z_][A-Za-z0-9_]*)*$"
      }
    }
  },
  "$defs": {
    "prefabEntity": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Local identifier for this entity within the prefab",
          "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
        },
        "name": {
          "type": "string",
          "description": "Display name for the entity"
        },
        "parent": {
          "type": "string",
          "description": "ID of the parent entity for hierarchy"
        },
        "components": {
          "type": "object",
          "description": "Components attached to this entity. Key is component type name.",
          "additionalProperties": {
            "type": "object",
            "description": "Component data. Property names match component fields."
          }
        },
        "children": {
          "type": "array",
          "description": "Nested child entities",
          "items": {
            "$ref": "#/$defs/prefabEntity"
          }
        }
      }
    },
    "vector2": {
      "type": "object",
      "description": "2D vector",
      "properties": {
        "X": { "type": "number" },
        "Y": { "type": "number" }
      },
      "required": ["X", "Y"]
    },
    "vector3": {
      "type": "object",
      "description": "3D vector",
      "properties": {
        "X": { "type": "number" },
        "Y": { "type": "number" },
        "Z": { "type": "number" }
      },
      "required": ["X", "Y", "Z"]
    },
    "vector4": {
      "type": "object",
      "description": "4D vector or quaternion",
      "properties": {
        "X": { "type": "number" },
        "Y": { "type": "number" },
        "Z": { "type": "number" },
        "W": { "type": "number" }
      },
      "required": ["X", "Y", "Z", "W"]
    }
  }
}
