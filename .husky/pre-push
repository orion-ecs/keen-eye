#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Skip pre-commit hook on web sessions to prevent timeout
# Web sessions have limited resources and parallel test execution can hang
if [ -n "$CLAUDE_CODE_REMOTE" ]; then
    echo "[Husky] Skipping pre-push hook on web session (CLAUDE_CODE_REMOTE is set)"
    exit 0
fi

dotnet husky run --group pre-push
