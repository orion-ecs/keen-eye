{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "KESL",
  "scopeName": "source.kesl",
  "fileTypes": ["kesl"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#declarations" },
    { "include": "#blocks" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#operators" },
    { "include": "#constants" },
    { "include": "#functions" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.kesl",
          "match": "//.*$"
        },
        {
          "name": "comment.block.kesl",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            {
              "name": "comment.block.kesl",
              "match": "."
            }
          ]
        }
      ]
    },
    "declarations": {
      "patterns": [
        {
          "name": "keyword.declaration.kesl",
          "match": "\\b(compute|vertex|fragment|geometry|pipeline|component)\\b"
        }
      ]
    },
    "blocks": {
      "patterns": [
        {
          "name": "keyword.block.kesl",
          "match": "\\b(query|params|in|out|execute|textures|samplers|layout)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.kesl",
          "match": "\\b(if|else|for|while|return|break|continue)\\b"
        },
        {
          "name": "keyword.modifier.kesl",
          "match": "\\b(read|write|optional|without)\\b"
        },
        {
          "name": "keyword.topology.kesl",
          "match": "\\b(input|output|max_vertices|points|lines|lines_adjacency|triangles|triangles_adjacency|line_strip|triangle_strip)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.kesl",
          "match": "\\b(float|float2|float3|float4|int|int2|int3|int4|uint|bool|mat4)\\b"
        },
        {
          "name": "storage.type.texture.kesl",
          "match": "\\b(texture2D|textureCube|texture3D|sampler)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.kesl",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.assignment.kesl",
          "match": "(=|\\+=|-=|\\*=|/=)"
        },
        {
          "name": "keyword.operator.arithmetic.kesl",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.logical.kesl",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.binding.kesl",
          "match": "@"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.kesl",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.builtin.kesl",
          "match": "\\b(sin|cos|tan|asin|acos|atan|atan2|sinh|cosh|tanh)\\b"
        },
        {
          "name": "support.function.builtin.kesl",
          "match": "\\b(sqrt|pow|exp|exp2|log|log2|abs|sign|floor|ceil|round|fract|mod|min|max|clamp|mix|step|smoothstep)\\b"
        },
        {
          "name": "support.function.builtin.kesl",
          "match": "\\b(length|distance|dot|cross|normalize|reflect|refract|faceforward)\\b"
        },
        {
          "name": "support.function.builtin.kesl",
          "match": "\\b(sample|has|emit|endPrimitive)\\b"
        },
        {
          "name": "support.function.constructor.kesl",
          "match": "\\b(float2|float3|float4|int2|int3|int4|mat4)\\s*(?=\\()"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.kesl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.kesl",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.kesl",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?[fF]?\\b"
        },
        {
          "name": "constant.numeric.integer.kesl",
          "match": "\\b\\d+\\b"
        },
        {
          "name": "constant.numeric.hex.kesl",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.kesl",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
