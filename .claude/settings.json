{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/install-dotnet.sh"
          },
          {
            "type": "command",
            "command": "./scripts/install-hooks.sh"
          },
          {
            "type": "command",
            "command": "./.claude/hooks/install-packages.sh"
          }
        ]
      },
      {
        "matcher": "resume",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/resume-dotnet.sh"
          }
        ]
      }
    ]
  }
}
