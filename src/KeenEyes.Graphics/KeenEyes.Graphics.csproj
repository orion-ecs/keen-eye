<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>KeenEyes.Graphics</PackageId>
    <Description>Graphics plugin for KeenEyes ECS using Silk.NET (OpenGL/Vulkan)</Description>
    <PackageTags>ecs;graphics;opengl;vulkan;silk.net;game;rendering</PackageTags>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="KeenEyes.Graphics.Tests" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\KeenEyes.Core\KeenEyes.Core.csproj" />
    <ProjectReference Include="..\KeenEyes.Spatial\KeenEyes.Spatial.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Silk.NET.OpenGL" />
    <PackageReference Include="Silk.NET.Windowing" />
    <PackageReference Include="Silk.NET.Input" />
    <PackageReference Include="Silk.NET.Maths" />
  </ItemGroup>

</Project>
