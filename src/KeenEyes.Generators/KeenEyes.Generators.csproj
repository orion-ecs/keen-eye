<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>

    <!-- Source generator requirements -->
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
    <IsRoslynComponent>true</IsRoslynComponent>

    <!-- Suppress RS2008 - analyzer release tracking not needed for internal analyzers -->
    <NoWarn>$(NoWarn);RS2008</NoWarn>

    <!-- Package metadata -->
    <PackageId>KeenEyes.Generators</PackageId>
    <Description>Source generators for KeenEyes ECS framework</Description>
    <PackageTags>ecs;entity;component;system;source-generator;roslyn</PackageTags>
    <DevelopmentDependency>true</DevelopmentDependency>
    <IsPackable>true</IsPackable>

    <!-- Include the generator as an analyzer -->
    <IncludeBuildOutput>false</IncludeBuildOutput>

    <!-- Analyzer projects cannot be AOT-compiled (targets netstandard2.0) -->
    <IsAotCompatible>false</IsAotCompatible>
    <PublishAot>false</PublishAot>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" />
  </ItemGroup>

  <!-- Pack the generator correctly -->
  <ItemGroup>
    <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>

</Project>
